@model MyShop.Entities.ViewModels.ShoppingCardViewModel
@using Microsoft.Extensions.Options;
@inject IOptions<StripeData> Stripe
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/summary.css" />
</head>
<body>

    <header>
    </header>
    <form method="post" asp-action="Summary">
    <div class="wrapper">
        <div class="h5 large">Billing Address</div>
        <div class="row">
            <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1">
                <div class="mobile h5">Billing Address</div>
                <div id="details" class="bg-white rounded pb-5">
                @*11*@   
                        <div class="row">
                          
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="phonenumber"></label>
                                    <div class="d-flex jusify-content-start align-items-center rounded p-2"> <input type="text" asp-for="phonenumber"> <span class="fas fa-check text-success pr-2"></span> </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label asp-for="Address"></label>
                                    <div class="d-flex jusify-content-start align-items-center rounded p-2"> <input type="text" asp-for="Address"> <span class="fas fa-check text-success pr-2"></span> </div>
                                </div>
                            </div>

                        </div>
                </div>

            </div>
            <div class="col-lg-6 col-md-8 col-sm-10 offset-lg-0 offset-md-2 offset-sm-1 pt-lg-0 pt-3">
                <div id="cart" class="bg-white rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="h6">Cart Summary</div>
                        <div class="h6"> <a href="#">Edit</a> </div>
                    </div>
            @foreach(var item in Model.cards)
            {
                   
                        <div class="d-flex jusitfy-content-between align-items-center pt-3 pb-2 border-bottom">
                            <div class="item pr-2">
                                <img src="@item.Product.Image" alt="" width="80" height="80">
                            </div>
                            <div class="d-flex flex-column px-3"> <b class="h5 ms-5">@item.Product.Name </div>
                            <div class="ml-auto"> <b class="h5 ms-5">$@item.Product.Price</b> </div>
                        </div>

                       
            }

                    <div class="d-flex align-items-center py-2">
                        <div class="display-5">Total</div>
                        <div class="ml-auto d-flex">
                            <div class="font-weight-bold mx-5">@Model.Total</div>
                        </div>
                    </div>
                    </div>


                    <div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2">
                        <div class="col-md-6">
                            <a class="btn text-uppercase" href="/customer/home/index">back to shopping</a>
                        </div>
                        <div class="col-md-6 pt-md-0 pt-3">
                            <button class="btn text-white ml-auto" type="submit"> <span class="fas fa-lock"></span> Continue to Shopping </button>
                        </div>
                    </div>
                    <div class="text-muted pt-3" id="mobile"> <span class="fas fa-lock"></span> Your information is save </div>
                </div>
            
        </div>
        <div class="text-muted"> <span class="fas fa-lock"></span> Your information is save </div>
    </div>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>